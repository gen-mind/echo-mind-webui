# =============================================================================
# EchoMind WebUI Environment Configuration
# =============================================================================
#
# Copy this file to .env and configure for your environment.
# This file contains EchoMind-specific settings that extend Open WebUI's
# default configuration.
#
# Reference: https://docs.openwebui.com/getting-started/env-configuration
# =============================================================================

# =============================================================================
# EchoMind Backend API
# =============================================================================
# URL to the EchoMind FastAPI backend (replaces Open WebUI's backend)

# Development
VITE_ECHOMIND_API_URL=http://localhost:8080

# Production (uncomment and configure)
# VITE_ECHOMIND_API_URL=https://api.demo.echomind.ch

# WebSocket URL for real-time features (Socket.IO endpoint)
VITE_ECHOMIND_WS_URL=http://localhost:8080

# Production (uncomment and configure)
# VITE_ECHOMIND_WS_URL=https://api.demo.echomind.ch

# =============================================================================
# Authentication (Authentik OIDC)
# =============================================================================
# EchoMind uses Authentik as the identity provider via OIDC.
# These settings configure the OIDC client in the frontend.

# OIDC Authority URL (Authentik application endpoint)
# Development
VITE_OIDC_AUTHORITY=http://auth.localhost/application/o/echo-mind/

# Production (uncomment and configure)
# VITE_OIDC_AUTHORITY=https://auth.demo.echomind.ch/application/o/echo-mind/

# OIDC Client ID (from Authentik application)
# IMPORTANT: Replace with your actual Authentik client ID
VITE_OIDC_CLIENT_ID=your-authentik-client-id-here

# OIDC Redirect URI (where Authentik sends users after login)
# Development
VITE_OIDC_REDIRECT_URI=http://localhost:5173/auth/callback

# Production (uncomment and configure)
# VITE_OIDC_REDIRECT_URI=https://demo.echomind.ch/auth/callback

# OIDC Post-Logout Redirect URI
# Development
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:5173

# Production (uncomment and configure)
# VITE_OIDC_POST_LOGOUT_REDIRECT_URI=https://demo.echomind.ch

# OIDC Scopes (space-separated)
VITE_OIDC_SCOPES=openid profile email

# =============================================================================
# Feature Flags
# =============================================================================
# Enable or disable EchoMind-specific features

# Enable EchoMind navigation sidebar items (Connectors, Documents, etc.)
VITE_ECHOMIND_FEATURES_ENABLED=true

# Enable Teams feature (multi-tenant support)
VITE_ECHOMIND_TEAMS_ENABLED=true

# Enable Connectors feature (external data sources)
VITE_ECHOMIND_CONNECTORS_ENABLED=true

# Enable Documents feature (document management)
VITE_ECHOMIND_DOCUMENTS_ENABLED=true

# Enable custom Assistants feature
VITE_ECHOMIND_ASSISTANTS_ENABLED=true

# Enable LLM configuration management
VITE_ECHOMIND_LLMS_ENABLED=true

# Enable Embedding Models configuration
VITE_ECHOMIND_EMBEDDING_MODELS_ENABLED=true

# =============================================================================
# Branding (License Compliant)
# =============================================================================
# Open WebUI license requires their branding to remain visible.
# EchoMind branding is shown as a subordinate element.

# EchoMind platform name shown in subordinate positions
VITE_ECHOMIND_PLATFORM_NAME=EchoMind Platform

# Organization name for footer/about
VITE_ECHOMIND_ORG_NAME=Gen-Mind AG

# Support email
VITE_ECHOMIND_SUPPORT_EMAIL=support@echomind.ch

# =============================================================================
# Development Settings
# =============================================================================

# Log level for frontend (debug, info, warn, error)
VITE_LOG_LEVEL=info

# Enable development mode features (detailed errors, etc.)
VITE_DEV_MODE=false
